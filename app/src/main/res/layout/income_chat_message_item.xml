<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_chatroom_message"
        android:layout_width="@dimen/chat_message_icon_size"
        android:layout_height="@dimen/chat_message_icon_size"
        app:srcCompat="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message_item_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/time_size"
            android:text="@string/contact"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble4">

            <TextView
                android:id="@+id/tv_chatroom_income_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                style="@style/TextAppearance.Design.Snackbar.Message"
                android:text="null"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23:01"
        android:textSize="@dimen/time_size"
        android:layout_gravity="center"/>

</LinearLayout>