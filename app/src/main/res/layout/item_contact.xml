<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clickable_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:clickable="true"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/contact_image_width"
        android:layout_height="@dimen/contact_image_height"
        android:layout_marginStart="10dp"
        android:visibility="visible"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/contact_desc_container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/tv_date"
        android:layout_marginEnd="19dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_icon">

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_very_long_name_which_will_be_overlapping"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_contact_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/blala" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_date"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>